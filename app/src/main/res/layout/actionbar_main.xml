<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:id="@+id/layout_actionbar"
                android:layout_width="match_parent"
                android:layout_height="52dp"
                android:background="@color/white"
                android:orientation="vertical"
    >

    <TextView
        android:id="@+id/actbar_title"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:gravity="center_horizontal|center"
        android:text="2017年9月"
        android:textSize="20dp"/>

    <Button
        android:id="@+id/actbar_today"
        android:layout_width="40dp"
        android:layout_height="match_parent"
        android:layout_marginEnd="12dp"
        android:text="今"
        android:layout_alignBaseline="@+id/actbar_title"
        android:layout_alignBottom="@+id/actbar_title"
        android:layout_toStartOf="@+id/actbar_settings"/>

    <Button
        android:id="@+id/actbar_settings"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:text="="
        android:layout_centerVertical="true"
        android:layout_alignParentEnd="true"/>
</RelativeLayout>